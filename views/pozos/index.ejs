<% layout('layouts/template') %>


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Pozos</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <div class="card-header py-3 mx-auto">
                    <a href="/pozos/nuevo"><button class="btn btn-primary" type="submit">Agregar un nuevo registro</button></a>
                </div>
                <% if(datos.length) {%>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">ID Estado</th>
                            <th scope="col">Periodo</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(pozo of datos) {%>
                        <tr>
                            <th scope="row"><%= pozo.id_pozo %></th>
                            <td><%= pozo.id_estado %></td>
                            <td><%= pozo.periodo %></td>
                            <td>
                                <a href="pozos/<%= pozo.id_pozo %>">
                                    <button class="btn btn-primary" type="button">
                                        <i class="bi bi-pen"></i>
                                    </button>
                                </a>
                            </td>
                            <td>
                                <form action="/pozos/<%= pozo.id_pozo %>?_method=DELETE" method="post">
                                    <button class="btn btn-danger" type="submit">
                                        <i class="bi bi-trash3"></i>
                                    </button>  
                                </form>                             
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <% }else{ %>
                    <h3 class="text-center">No hay registros en este momento</h3>
                <% } %>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
